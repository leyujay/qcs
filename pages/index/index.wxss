/**index.wxss**/
.search{
  width: 95%;
  background-color: whitesmoke;
  height: 5vh;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
}
.search-box{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.img{
  width: 3.9vw;
  height: 3.9vw;
  float: left;
  margin-left: 3vw;
  margin-right: 3vw;
}
.txt{
  color: #bfbfbf;
}

/* 轮播图 */
.swiper{
  margin-top: 3vw;
  height: 30vh;
}
.swiper-item{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper-item image{
  width: 100vw;
  height: 70.42vw;
}
.remote-box{
  padding: 2vw;
  margin-top: 2vw;
  margin-bottom: 2vw;
  display: flex;
  align-items: center;
  /* border: 1px solid #bfbfbf; */
}
.remote-item{
  float: left;
  display: flex;
  align-items: center;
  margin-right: 5vw;
}
.remote-item image{
  width: 5vw;
  height: 5vw;
}
.remote-info{
  float: left;
  border: 1px solid #bfbfbf;
  display: flex;
  align-content: center;
  padding: 2vw;
  border-radius: 3vw;
  margin-left: 3vw;
}
.cate-box{
  padding: 2vw;
  height: 17vw;
  margin-bottom: 5vw;
}
.cate-item{
  float: left;
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.cate-item image{
  width: 12vw;
  height: 12vw;
  margin-bottom: 2vw;
}


 /* 促销小长条 */
.long-box{
  width: 95%;
  padding: 2vw;
  margin-top: 20vw;
}
.long-item{
  width: 47%;
  float: left;
  overflow: hidden;
  margin-left: 2vw;
  display: flex;
  align-items: center;
}
.long-item image{
  width: 50vw;
  height: 20vw;
}
/* 广告大长条 */
.ad-img{
  width: 96vw;
  height: 18vw;
  padding: 2vw;
  margin-top: 3vw;
}
.ad-box{
  width: 100%;
  height: 30vw;
  margin-top: 3vw;
  display: flex;
  align-items: center;
  overflow: hidden;
}
.ad-big{
  width: 100%;
}
/* 秒杀促销 */
.skill-title{
  margin-top:0.1vw;
  width: 100%;
  display: flex;
  align-items: center;
  height: 13vw;
}
.skill-title text{
  float: left;
}
.today{
  float: left;
  font-weight: bold;
  margin-left: 3vw;
  margin-right: 2vw;
}
.timeout{
  float: left;
  background-color: black;
  color: white;
  height: 5vw;
  width: 7vw;
  margin-left: 2vw;
  margin-right: 2vw;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 1vw;
  padding-bottom: 0.5vw;
}
.timeout2{
  float: left;
  background-color: black;
  color: white;
  height: 5vw;
  width: 30vw;
  margin-left: 2vw;
  margin-right: 2vw;
  display: flex;
  justify-content: center;
  padding-bottom: 0.5vw;
  align-items: center;
  border-radius: 1vw;
}
.more-goods{
  margin-left: 22vw;
}

/* 滑动图 */
.back{
  background-color: rgb(241, 244, 247);
  height: 25vw;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  position: relative;
}
.simg{
  width: 25vw;
  height: 25vw;
  border-bottom: 1px solid #e2e2e2;
}
.sgoods{
  width: 25vw;
  height: 40vw;
  margin-left: 2vw;
  border: 1px solid #e2e2e2;
  margin-top: 1vw;
  display: inline-block;
}
.rub{
  background-color: rgb(250, 91, 91);
  width: 10vw;
  height: 7vw;
  text-align: center;
  border-radius: 2vw;
  color: white;
  position: absolute;
  left: -1vw;
  bottom: -2.4vw;
  font-size: 3.2vw;
}
.stitle{
  text-align: center;
  margin-top: 1vw;
  margin-bottom: 1vw;
}
.real-price{
  color: red;
  font-weight: 600;
  float: left;
}
.fake-price{
  color: rgb(158, 158, 158);
  font-weight: 300;
  margin-left: 2vw;
  margin-top: 0.8vw;
  float: left;
  text-decoration:line-through;
}
.scroll2{
  height: 45vw;
  width: 100vw;
  display: flex;
  white-space: nowrap;
}
