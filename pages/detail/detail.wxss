/* pages/detail/detail.wxss */
.sbox{
  width: 100vw;
  height: 100vw;
}
.spic{
  width: 100vw;
  height: 100vw;
}
.split{
  width: 100%;
  height: 12vw;
  background-color: rgb(255, 92, 80);
  color: white;
  display: inline-flex;
  align-items: center;
  font-size: 3.9vw;
  position: relative;
}
.skill{
  background-color: white;
  padding-top: 2vw;
  padding-bottom: 2vw;
  padding-left: 3vw;
  padding-right: 3vw;
  margin-left: 2vw;
  margin-right: 2vw;
  border-radius: 4vw;
  color:  rgb(255, 92, 80);
}
.time{
  position: absolute;
  right: 5vw;
}
.info{
  margin:3.9vw;
  height: 25vw;
}
.txt1{
  font-size: 3.99vw;
  font-weight: bold;
  margin-bottom: 3.9vw;
  letter-spacing: 1.2px;
}
.txt2{
  font-size: 3.5vw;
  margin-bottom: 3.9vw;
  letter-spacing: 0.2px;
}
.txt3{
  float:left;
  margin-right: 1vw;
}
.txt4{
  font-size: 3.5vw;
  color: rgb(180, 180, 180);
  padding-top: 1.8vw;
  text-decoration: line-through;
}
.makesure{
  font-size: 3.9vw;
  width: 100%;
  height: 11vw;
  background-color: whitesmoke;
  display: inline-flex;
  align-items: center;
  color: rgb(114, 114, 114);
}
.sure-item{
  width: 33.33%;
  height: 11vw;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.right{
  height: 5vw;
  width: 5vw;
  margin-right: 1vw;
}
.qu-box{
  font-size: 3.9vw;
  width: 100%;
  height: 11vw;
  display: inline-flex;
  align-items: center;
  position: relative;
}
.qu-txt{
  margin-left: 3vw;
  margin-right: 3vw;
}
.qu-item{
  margin-right: 3vw;
  background-color: rgb(255, 227, 227);
  border: 1px solid rgb(255, 67, 67);
  padding-left: 2vw;
  padding-right: 2vw;
  color: rgb(255, 67, 67);
  border-radius: 3vw;
  font-size: 3.5vw;
}
.qu-img{
  width: 5vw;
  height: 5vw;
  position: absolute;
  right: 2vw;
}

/* vip特权 */
.vi-box{
  width: 100%;
  height: 24vw;
  background-color: whitesmoke;
  display: flex;
  align-items: center;
}
.vi-box2{
  width: 100%;
  height: 20vw;

}
.vi-it{
  height: 10vw;
  width: 100%;
  font-size: 3.9vw;
  margin-top:0.3vw; 
  margin-bottom:0.3vw; 
  background-color: rgb(255, 240, 211);
  display: inline-flex;
  align-items: center;
}
.vi-item{
  padding-left: 2vw;
  padding-right: 2vw;
  border: 1px solid rgb(255, 66, 138);
  border-radius: 1vw;
  color: rgb(255, 66, 138);
  margin-left: 3vw;
  margin-right: 3vw;
  padding-top: 0.5vw;
  padding-bottom: 0.5vw;
}
.scroll-box{
  width: 100%;
  height: 93vh;
}
.paycart-box{
  width: 100%;
  height: 7vh;
  display: inline-flex;
}
.cart{
  width: 50%;
  height: 7vh;
  background-color: rgb(255, 152, 191);
  display: flex;
  align-items: center;
  color: white;
  font-size: 3.9vw;
  justify-content: center;
}
.pay{
  width: 50%;
  height: 7vh;
  background-color: rgb(252, 79, 145);
  display: flex;
  align-items: center;
  color: white;
  font-size: 3.9vw;
  justify-content: center;
}