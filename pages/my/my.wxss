/* pages/my/my.wxss */
.user-box{
  width: 100%;
  height: 30vw;
  /* background-color: whitesmoke; */
  display: inline-flex;
  align-items: center;
  position: relative;
}
.user-txt-box{
  margin-left: 5vw;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-box image{
  height: 20vw;
  width: 20vw;
  right: 5vw;
  position: absolute;
  border-radius: 50%;
}
.user-phone{
  font-size: 3.3vw;
  margin-top: 2vw;
}
.user-name{
  font-size: 6vw;
}


/* 订单部分 */
.info-box{
  width: 100%;
}
.info-item{
  width: 100%;
  height: 12vw;
  /* background-color: whitesmoke; */
  display: inline-flex;
  align-items: center;
  position: relative;
}
.info-item-img{
  height: 5vw;
  width: 5vw;
  margin-left: 5vw;
  margin-right: 5vw;
}
.info-item-txt{
  font-size: 4.2vw;
  color: #585858;
}
.info-item-img2{
  height: 5vw;
  width: 5vw;
  position: absolute;
  right: 5vw;
}
.line{
  background-color: #c5c5c5;
  margin-top: 2vw;
  margin-bottom: 2vw;
  height: 0.1vw;
  width: 100%;
}